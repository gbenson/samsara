#!/usr/bin/env python

### Preamble: allow this program to be run without PYTHON_PATH abuse
import sys, os
samsara_dir = os.path.dirname(os.path.dirname(os.path.realpath(sys.argv[0])))
if samsara_dir not in sys.path:
    sys.path.insert(0, samsara_dir)
### end of preamble

from getopt import getopt, GetoptError
from samsara.spider import spider
from samsara.server import SamsaraServer
import time

startpoints = []
exclusions = []
timed = profiling = False

usage = """\
Usage: spider [OPTION] ROOT DEST

  -s, --startat=PATH    start spidering at this prefix
  -e, --exclude=PATH    do not spider anything starting with this prefix
  -t  --timed           time the run
  -p, --profile         run in the Python profiler
      --help            display this help and exit
"""

try:
    opts, args = getopt(
        sys.argv[1:],
        "s:e:tp",
        ["help", "startat=", "exclude=", "time", "profile"])
except GetoptError:
    print usage
    sys.exit(1)

if len(args) != 2:
    print usage
    sys.exit(1)
root, dest = args

for o, a in opts:
    if o == "--help":
        print usage
        sys.exit()
    if o in ("-s", "--startat"):
        startpoints.append(a)
    if o in ("-e", "--exclude"):
        exclusions.append(a)
    if o in ("-t", "--timed"):
        timed = True
    if o in ("-p", "--profile"):
        profiling = True

if not startpoints:
    startpoints.append("/")

def main():
    server = SamsaraServer(root)
    server.xmlctx.cache_stylesheets = True
    spider(server, dest, startpoints, exclusions)

if timed:
    start_time = time.time()

if profiling:
    import profile
    profile.run("main()", "spider.prof")
else:
    main()

if timed:
    print "Spidered in %.1f seconds" % (time.time() - start_time)
